<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".N2211_N2248_B">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.example.muhammadfarooqui.neonate.N2211_N2248_B" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--        <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mnchmainpsbi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:id="@+id/img_psbitest"
                        android:layout_width="90dp"
                        android:layout_height="60sp"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/unwhite" />

                </RelativeLayout>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fadeScrollbars="false"
            android:fillViewport="true"
            android:paddingBottom="5sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:scrollbarSize="10dip">

            <LinearLayout style="@style/Q_Linerlayout_v">

                <!-- Radio Buttons N2213 Starts -->
                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextView"
                            android:text="@string/txt_N2213" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/ll_N2213"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextViewHead"
                            android:text="@string/txt_N2213_2" />

                        <RadioGroup style="@style/RadioGroup">

                            <RadioButton
                                android:id="@+id/rb_N2213_A_1"
                                style="@style/RadioButton"
                                android:text="@string/rb_N2213_2A" />

                            <RadioButton
                                android:id="@+id/rb_N2213_A_2"
                                style="@style/RadioButton"
                                android:text="@string/rb_N2213_2B" />

                            <RadioButton
                                android:id="@+id/rb_N2213_A_3"
                                style="@style/RadioButton"
                                android:text="@string/rb_N2213_2C" />

                            <TextView
                                style="@style/TextViewHead"
                                android:text="@string/txt_N2213_3" />

                            <RadioButton
                                android:id="@+id/rb_N2213_A_4"
                                style="@style/RadioButton"
                                android:text="@string/rb_N2213_3A" />

                            <RadioButton
                                android:id="@+id/rb_N2213_A_5"
                                style="@style/RadioButton"
                                android:text="@string/rb_N2213_3B" />

                            <RadioButton
                                android:id="@+id/rb_N2213_A_6"
                                style="@style/RadioButton"
                                android:text="@string/rb_N2213_3C" />

                            <RadioButton
                                android:id="@+id/rb_N2213_A_7"
                                style="@style/RadioButton"
                                android:text="@string/rb_N2213_3D" />

                        </RadioGroup>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/ll_N2213_3E_2A"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextViewHead"
                            android:text="@string/txt_N2213_2" />

                        <CheckBox
                            android:id="@+id/cb_N2213_3E_2A"
                            style="@style/CheckBox"
                            android:text="@string/cb_N2213_3E_2A" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView style="@style/Q_CardView">

                    <LinearLayout
                        android:id="@+id/ll_N2213_4"
                        style="@style/Q_Linerlayout_v">

                        <TextView
                            style="@style/TextViewHead"
                            android:text="@string/txt_N2213_4" />

                        <EditText
                            android:id="@+id/ed_N2213_4"
                            style="@style/EditText_varchar"
                            android:hint="@string/txt_N2213_4" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!-- Radio Buttons N2213 Ends -->

                <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_AddMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="#1ed61e"
                        android:onClick="@{() -> callback.BtnAddMore()}"
                        android:text="ADD MORE ACTIONS"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/black_overlay"
                        android:onClick="@{() -> callback.BtnContinue()}"
                        android:text="NEXT SECTION"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>